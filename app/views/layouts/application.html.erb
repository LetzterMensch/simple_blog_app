<!DOCTYPE html>
<html>
  <head>
    <title>BlogApplication</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <div class="text-success" style="color:green;">
          <p class="notice text-success"><%= notice %></p>
          <p class="alert" class="text-danger"><%= alert %></p>      
      </div>
    <%= yield %>
  </body>
</html>
